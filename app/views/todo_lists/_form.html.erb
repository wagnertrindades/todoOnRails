<%= form_for(@todo_list) do |f| %>
  <% if @todo_list.errors.any? %>
    <div id="error_explanation">
      <ul class="forms-errors">
      <% @todo_list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Titulo" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "Descrição" %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit text_custom %>
  </div>
<% end %>
