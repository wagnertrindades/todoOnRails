<h2 class="in-content">Editar conta</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "forms" }) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field">
    <%= f.label "Nome" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "E-mail" %><br />
    <%= f.email_field :email %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label "Nova Senha" %> <i>(deixe em branco caso não queira mudar sua senha)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "Confirmação de Senha" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "Senha atual" %> <i>(é necessário sua senha atual para fazer qualquer alteração)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Atualizar" %>
  </div>
<% end %>

<div class="in-content">
  <h3>Cancelar minha conta</h3>

  <p>Quer cancelar sua conta? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Você tem certeza que deseja cancelar sua conta?" }, method: :delete %></p>
</div>

<div class="links">
  <%= link_to "Voltar", :back %>
</div>